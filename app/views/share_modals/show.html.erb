<p>
  <strong>Title:</strong>
  <%= @share_modal.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @share_modal.content %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @share_modal.slug %>
</p>

<%= link_to 'Edit', edit_share_modal_path(@share_modal) %> |
<%= link_to 'Back', share_modals_path %> | 
<a data-toggle="modal" href="#email-modal-form-content" class=" email_share_button">Share</a> 

<div class="modal fade" id="email-modal-form-content" role="dialog">
    <div class="modal-dialog modal-sm"> 
    
      <!-- Modal content-->
      <div class="modal-content ">
        <div class="modal-header text-center">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 class="Taxworld-Subhead" style="color: #3262a0">Share this page</h3>
        </div>

        <div class="modal-body ">
            <%= form_for @share_form, :html => {:class => 'form-horizontal', :style=>'width:90%' } do |f| %>
                <div class="form-group">
                	 <label for="name" style="margin-left:15px">Your Name: </label>
                  <input type="text" class="form-control" name="share_page_name" placeholder="Name" value="<%= current_user.name%>" style="margin-left:15px" readonly required>
                </div>

              <div class="form-group">
                <label for="email" style="margin-left:15px">Recipient Email:</label>
                <input type="email" class="form-control" name="share_page_email"  placeholder="Email" style="margin-left:15px" required>  
              </div>

              <div class="form-group">
                <label for="message" style="margin-left:15px">Message:</label>
                <textarea class="form-control" name="share_page_message" rows="5" id="share-page-message" placeholder="Message" style="margin-left:15px" required readonly></textarea>
              </div>
                 <button class="btn btn-primary" type="submit" value="Submit" name="share_page_button" >Submit</button>
            <% end %>      
        </div>
        <div class="modal-footer ">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>      
    </div>
</div>

<script type="text/javascript">
jQuery(document).ready(function($) {
  $(document).ready(function () {
    $(".email_share_button").click(function(){
      var link = $(location).attr('href');
      $("#share-page-message").val(link);
    });          
  });
});
</script>
